# Database Configuration
DATABASE_URL=sqlite:///./data/auth_system.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Security Settings - CHANGE THESE IN PRODUCTION!
SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Mode
PRODUCTION=True
DEBUG_MODE=False

# Operating Hours (24-hour format)
OPENING_HOUR=9
OPENING_MINUTE=0
CLOSING_HOUR=23
CLOSING_MINUTE=0
WARNING_MINUTES_BEFORE_CLOSE=15

# CORS - Allowed Origins (comma-separated)
# Add your Netlify URL, ngrok URL, or production domains
ALLOWED_ORIGINS=https://your-admin-portal.netlify.app,https://your-client.netlify.app

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourcompany.com

# QR Code Settings
QR_CODE_EXPIRY_MINUTES=2
PIN_EXPIRY_MINUTES=5
SESSION_EXPIRY_MINUTES=30

# API Settings
API_TITLE=Central Auth API
API_VERSION=1.0.0
